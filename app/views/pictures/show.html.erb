<div class="container">


<center>        
  <table border="0">
  <tr>
        <td><%= image_tag @picture.image %></td>
        </td>
  </tr>
  <tr>
        <td>内容:<%= @picture.content %>
  </tr>
  <tr>
        <td>
<% unless @picture.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(picture_id: @picture.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<p>
  <p>
    
    <% if @picture.user == current_user %>
      <%= link_to '編集', edit_picture_path(@picture), data: { confirm: '本当に編集していいですか？' }  %> |
      <%= link_to '消去', picture_path(@picture.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }  %> |
      
    <% end %>
      <%= link_to '一覧画面へ', pictures_path %>
      
      
    </td>
</tr>

</center>
  </table>
</div>
