<div class="container">
<div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<%= form_with(model: @picture, local: true ,url: choose_new_or_edit ) do |form| %>

  <% if @picture.errors.any? %>
  <div id="error_explantion">
    <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
    <ul>
      
   <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
      </ul>
      
      
      </div>
      <% end %>
      


  <table border="0">

    <tr>
      <div class="picture_title">
      <td class="table_space">
        <%= form.label :内容 %>
      </td>  
      <td>
        <%= form.text_field :content %>
      </td>
      </div>
    </tr>

  <table border="0">
    <tr>
      <div class="picture_title">
      <td>
        <%= form.label :Photo %>
      </td>  
      <td>
          <%= form.file_field :image, id: :picture_image %>
          <%= form.hidden_field :image_cache %>
      </td>
      </div>
    </tr>
</table>    

<p>
  
  <%= form.submit'投稿', class: 'btn btn-primary btn-block'%> 
<% end %>

<%= link_to "画像投稿一覧画面にもどる", pictures_path %>

</div>
</div>